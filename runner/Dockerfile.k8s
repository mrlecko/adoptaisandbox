FROM python:3.11-slim

WORKDIR /app

RUN useradd -m -u 1000 runner

COPY runner/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

COPY runner/runner.py /app/runner.py
COPY runner/runner_python.py /app/runner_python.py
COPY runner/common.py /app/common.py
COPY datasets /data

RUN chown -R runner:runner /app /data
USER runner

ENV PYTHONUNBUFFERED=1

ENTRYPOINT ["python3", "/app/runner.py"]
